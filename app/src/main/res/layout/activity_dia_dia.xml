<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eus.ehu.tta.aupapp.Presentador.DiaDiaActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_marginRight="@dimen/boton_horizontal_margin"
        android:layout_marginLeft="@dimen/boton_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/preguntarDireccion"
        android:onClick="irPreguntarDireccion"/>

    <Button
        android:layout_marginLeft="@dimen/boton_horizontal_margin"
        android:layout_marginRight="@dimen/boton_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/saludosdespedidas"
        android:onClick="irSaludosyDespedidas"/>

    <Button
        android:layout_marginLeft="@dimen/boton_horizontal_margin"
        android:layout_marginRight="@dimen/boton_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/iniciarConversacion"
        android:onClick="irIniciarConversacion"/>

    <Button
        android:layout_marginLeft="@dimen/boton_horizontal_margin"
        android:layout_marginRight="@dimen/boton_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/Precios"
        android:onClick="irPrecio"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/volverMenu"
        android:onClick="volverAlMenu"/>

</LinearLayout>
